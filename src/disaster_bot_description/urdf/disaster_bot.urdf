<?xml version="1.0"?>
<robot name="disaster_bot">

  <!-- Base Link -->
  <link name="base_link">
    <visual>
      <geometry>
        <box size="0.5 0.4 0.2" />
      </geometry>
      <material name="gray">
        <color rgba="0.5 0.5 0.5 1"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <box size="0.5 0.4 0.2" />
      </geometry>
    </collision>
    <inertial>
      <mass value="15.0" />
      <origin xyz="0 0 0" />
      <inertia ixx="0.15" ixy="0.0" ixz="0.0" iyy="0.15" iyz="0.0" izz="0.15" />
    </inertial>
  </link>

  <!-- Left Track -->
  <link name="left_track">
    <visual>
      <geometry>
        <cylinder length="0.2" radius="0.05" />
      </geometry>
      <material name="black">
        <color rgba="0.1 0.1 0.1 1" />
      </material>
    </visual>
    <collision>
      <geometry>
        <cylinder length="0.2" radius="0.05" />
      </geometry>
    </collision>
    <inertial>
      <mass value="2.0" />
      <origin xyz="0 0 0" />
      <inertia ixx="0.01" ixy="0.0" ixz="0.0" iyy="0.01" iyz="0.0" izz="0.01" />
    </inertial>
  </link>

  <!-- Right Track -->
  <link name="right_track">
    <visual>
      <geometry>
        <cylinder length="0.2" radius="0.05" />
      </geometry>
      <material name="black">
        <color rgba="0.1 0.1 0.1 1" />
      </material>
    </visual>
    <collision>
      <geometry>
        <cylinder length="0.2" radius="0.05" />
      </geometry>
    </collision>
    <inertial>
      <mass value="2.0" />
      <origin xyz="0 0 0" />
      <inertia ixx="0.01" ixy="0.0" ixz="0.0" iyy="0.01" iyz="0.0" izz="0.01" />
    </inertial>
  </link>

  <!-- Left Track Joint -->
  <joint name="left_track_joint" type="continuous">
    <parent link="base_link" />
    <child link="left_track" />
    <origin xyz="0 0.25 0" rpy="0 0 0" />
    <axis xyz="0 1 0" />
  </joint>

  <!-- Right Track Joint -->
  <joint name="right_track_joint" type="continuous">
    <parent link="base_link" />
    <child link="right_track" />
    <origin xyz="0 -0.25 0" rpy="0 0 0" />
    <axis xyz="0 1 0" />
  </joint>

  <!-- Vine Link (Expandable Cylinder) -->
  <link name="vine">
    <visual>
      <geometry>
        <cylinder length="0.5" radius="0.05" />
      </geometry>
      <material name="green">
        <color rgba="0 1 0 0.7"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <cylinder length="0.5" radius="0.05" />
      </geometry>
    </collision>
    <inertial>
      <mass value="1.0" />
      <origin xyz="0 0 0.25" />
      <inertia ixx="0.005" ixy="0.0" ixz="0.0" iyy="0.005" iyz="0.0" izz="0.005" />
    </inertial>
  </link>

  <!-- Vine Joint -->
  <joint name="vine_joint" type="prismatic">
    <parent link="base_link" />
    <child link="vine" />
    <origin xyz="0 0 0.1" rpy="0 0 0" />
    <axis xyz="0 0 1" />
    <limit lower="0.1" upper="0.6" effort="10" velocity="0.1" />
  </joint>

  <!-- Camera Link -->
  <link name="camera_link">
    <visual>
      <geometry>
        <box size="0.1 0.05 0.05" />
      </geometry>
      <material name="blue">
        <color rgba="0 0 1 1"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <box size="0.1 0.05 0.05" />
      </geometry>
    </collision>
    <inertial>
      <mass value="0.2" />
      <origin xyz="0 0 0" />
      <inertia ixx="0.001" ixy="0.0" ixz="0.0" iyy="0.001" iyz="0.0" izz="0.001" />
    </inertial>
  </link>

  <!-- Camera Joint -->
  <joint name="camera_joint" type="fixed">
    <parent link="vine" />
    <child link="camera_link" />
    <origin xyz="0 0 0.51" rpy="0 0 0" />
  </joint>

</robot>
